<body>

  <h3>Welcome back <%= @name %></h3>
  <br>
<div class='container'>
  <form method="post" action="/main" class="form-inline">
    <fieldset>
      <legend>Post a peep here</legend>
      <div class="form-group">
        <div class="col-lg-10">
          <textarea class="form-control" rows="3" id="message"placeholder="What's on your mind..."></textarea>
        </div>
      </div>
    <button type="submit" class="btn btn-primary" name='Peep'>Peep</button>
        </div>
      </fieldset>
    </form>
  <br>
  Or for a private peep
  <form method='post' action='/main/private/person'>
    <select name='maker'>
      <% @all_users.each do |user| %>
        <% if user.name != @name %>
          <option value=<%= user.name %>><%= user.name %></option>
        <% end %>
      <% end %>
    </select>
      <button type="submit" class="btn btn-primary" name='Go'>Go</button>
  </form>
  <br>
  <h2>Past peeps:</h2>
  <br>
  <br>
  <% if @all_peeps %>
    <% @all_peeps.each do |peep| %>
      <% if peep.personal_message_to == 'public' %>
        <% user = @all_users.get(peep.user_id) %>
        <dl>
          <dt><%= user.name %> (<%= user.username %>) at <%= peep.time.strftime('%r') %>:</dt>
          <dd><%= peep.message %></dd>
        </dl>
      <% end %>
    <% end %>
  <% end %>
</body>